@page "/ordertrackcontainer"

<section class="order-track-section">
    <div class="order-track-title-container">
        <p class="order-track-title">Order Tracking</p>
        <p class="order-track-id">#SPK1218153635</p>
    </div>

    <div class="order-track-profile">
        @foreach (var order in OrderTrackDetails)
        {
            <div class="order-track-details" key="@order.Id">
                <div class="order-track-detail">
                    <div class="order-track-profile-image">
                        <img src="@order.Image" alt="profile-image" />
                    </div>
                    <div class="order-track-status-details">
                        <div class="order-track-status-detail">
                            <p class="order-track-status">@order.Status</p>
                            <p class="order-track-date">@order.Date</p>
                        </div>
                        <div class="order-track-description">
                            @if (!string.IsNullOrEmpty(order.DescriptionStatus1))
                            {
                                <div class="order-track-description-status">
                                    <p>@order.DescriptionStatus1</p>
                                    @if (!string.IsNullOrEmpty(order.EstimatedDate1))
                                    {
                                        <p class="order-track-estimatedDate">@order.EstimatedDate1</p>
                                    }
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(order.DescriptionStatus2))
                            {
                                <div class="order-track-description-status">
                                    <p>@order.DescriptionStatus2</p>
                                    @if (!string.IsNullOrEmpty(order.EstimatedDate2))
                                    {
                                        <p class="order-track-estimatedDate">@order.EstimatedDate2</p>
                                    }
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(order.DescriptionStatus3))
                            {
                                <div class="order-track-description-status">
                                    <p>@order.DescriptionStatus3</p>
                                    @if (!string.IsNullOrEmpty(order.EstimatedDate3))
                                    {
                                        <p class="order-track-estimatedDate">@order.EstimatedDate3</p>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

